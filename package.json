{
  "name": "crimson",
  "version": "1.0.0",
  "description": "Application Electron multiplateforme pour générer, visualiser et exporter des palettes de couleurs pour le design d'interface",
  "author": "Crimson Team",
  "license": "MIT",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "electron-vite dev",
    "build": "electron-vite build && electron-builder",
    "preview": "electron-vite preview",
    "lint": "echo 'no lint configured'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "tailwind",
    "design",
    "colors",
    "palette",
    "ui",
    "accessibility"
  ],
  "dependencies": {
    "clsx": "^2.1.1",
    "culori": "^3.3.0",
    "electron-store": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/react": "^18.3.25",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "electron": "^28.3.3",
    "electron-builder": "^25.0.5",
    "electron-vite": "^2.3.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.crimson.app",
    "productName": "Crimson",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
